{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Helsinki",
  "schedule": ["* 21-22 * * 3"],
  "rebaseWhen": "conflicted",
  "enabledManagers": ["tflint-plugin", "nuget", "dockerfile"],
  "dockerfile": {
    "fileMatch": [
      "^tests/Dockerfile$"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": ["packageManager"],
      "enabled": true
    },
    {
      "matchManagers": ["nuget"],
      "enabled": false
    },
    {
      "matchManagers": ["dockerfile"],
      "excludePackageNames": ["mcr.microsoft.com/playwright/dotnet"],
      "enabled": false
    },
    {
      "matchManagers": ["nuget", "dockerfile"],
      "matchPackageNames": [
        "Microsoft.Playwright",
        "mcr.microsoft.com/playwright/dotnet"
      ],
      "rangeStrategy": "bump",
      "commitMessageAction": "Update",
      "commitMessageTopic": "playwright",
      "commitMessageExtra": "to {{{prettyNewVersion}}}",
      "groupName": "playwright",
      "enabled": true
    }
  ]
}
